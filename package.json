{
    "name": "easyglop",
    "version": "1.0.0",
    "description": "3D online shooter game with geometric primitives",
    "main": "index.js",
    "scripts": {
      "client": "cd client && npm start",
      "server": "cd server && npm start",
      "install-all": "npm install && cd client && npm install && cd ../server && npm install",
      "dev": "concurrently \"npm run server\" \"npm run client\""
    },
    "keywords": ["game", "3d", "shooter", "multiplayer", "threejs"],
    "author": "",
    "license": "MIT",
    "devDependencies": {
      "concurrently": "^8.2.0"
    }
  }